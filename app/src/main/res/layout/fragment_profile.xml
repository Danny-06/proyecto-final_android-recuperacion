<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainActivityBG"
    android:orientation="vertical"
    android:padding="20dp"
    android:showDividers="middle"
    android:divider="@drawable/divider_layout"
    android:clickable="true"
>

    <androidx.cardview.widget.CardView
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:cardCornerRadius="100dp"
        android:layout_gravity="center"
    >

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/user_placeholder"
            android:scaleType="centerCrop"
        />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="User Name"
        android:textSize="30sp"
        android:layout_gravity="center"
    />

    <TextView
        android:id="@+id/recipesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Recipes Made: ??"
        android:textSize="20sp"
        android:layout_gravity="center"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/changeProfileImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Profile Image"
        android:textSize="15sp"
        android:layout_gravity="center"
    />

    <Button
        android:id="@+id/seeOwnRecipesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See own recipes"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:backgroundTint="#096"
    />

    <Button
        android:id="@+id/seeAllRecipesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See all recipes"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:backgroundTint="#06F"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
    />

    <Button
        android:id="@+id/singOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sing out"
        android:layout_gravity="center"
        android:backgroundTint="#A22"
    />

</LinearLayout>
